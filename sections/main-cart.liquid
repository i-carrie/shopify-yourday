      if (items.length > 0 && hasOnlyAccessories) {
        const clearData = new FormData();
        items.forEach(item => clearData.append('updates[' + item.key + ']', 0));
        return fetch('/cart/update.js', {
          method: 'POST',
          body: clearData,
        });
