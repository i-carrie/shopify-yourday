<section class="max-w-screen-xl mx-auto px-4 py-8 md:px-8 lg:py-12">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
    <div class="flex flex-col gap-4">
      <div id="MainVisualArea" class="relative aspect-[4/5] w-full bg-gray-50 overflow-hidden">
        <div
          id="MainMediaContainer"
          class="flex md:block w-full h-full overflow-x-auto md:overflow-hidden snap-x snap-mandatory scrollbar-hide"
        >
          {% for media in product.media %}
            <div class="w-full h-full flex-shrink-0 snap-center">
              {% if media.media_type == 'image' %}
                <img src="{{ media | image_url: width: 1200 }}" class="w-full h-full object-cover">
              {% else %}
                {{
                  media
                  | video_tag:
                    controls: true,
                    autoplay: true,
                    muted: true,
                    loop: true,
                    class: 'w-full h-full object-cover'
                }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>

      {% if product.media.size > 1 %}
        <div class="hidden md:block relative group w-full px-1">
          <button
            id="GoPrev"
            type="button"
            class="thumb-arrow absolute left-0 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100"
          >
            {% render 'icon-chevron-left' %}
          </button>

          <div id="ThumbList" class="flex gap-2 overflow-x-auto pb-2 scrollbar-hide" style="scroll-behavior: smooth;">
            {% for media in product.media %}
              <div
                class="js-thumb w-20 h-20 flex-shrink-0 bg-gray-50 border-2 {% if media == featured_media %}is-active{% else %}border-transparent{% endif %} opacity-60 hover:opacity-100 transition-all"
                data-media-type="{{ media.media_type }}"
                {% if media.media_type == 'image' %}
                  data-src="{{ media | image_url: width: 1200 }}"
                {% else %}
                  {%- comment -%} å‹•ç”»HTMLã‚’ã‚¨ã‚¹ã‚±ãƒ¼ãƒ—ã—ã¦ä¿å­˜ {%- endcomment -%}
                  data-video-html="{{ media | video_tag: controls: true, autoplay: true, muted: true, loop: true, class: "w-full h-full object-cover" | escape }}"
                {% endif %}
              >
                <img
                  src="{{ media | image_url: width: 240 }}"
                  class="w-full h-full object-cover aspect-square pointer-events-none"
                >
                {% if media.media_type contains 'video' %}
                  <div class="thumb-video-badge">
                    <svg class="w-4 h-4 text-black" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.333-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"></path>
                    </svg>
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>

          <button
            id="GoNext"
            type="button"
            class="thumb-arrow absolute right-0 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100"
          >
            {% render 'icon-chevron-right' %}
          </button>
        </div>
      {% endif %}
    </div>

    <div class="lg:sticky lg:top-8 flex flex-col gap-6 py-4">
      <div class="space-y-4">
        <p class="text-sm uppercase tracking-widest text-gray-500">
          Your day / {{ product.collections.first.title | default: 'Collection' }}
        </p>
        <h1 class="text-3xl md:text-4xl font-serif text-gray-900">{{ product.title }}</h1>
        <p class="text-xl text-gray-700">{{ product.price | money }}</p>
      </div>
      <div class="h-px bg-gray-200 w-full"></div>
      <div class="space-y-4">
        <div class="w-full h-12 bg-gray-50 border border-gray-200 flex items-center px-4 text-sm text-gray-500">
          Variant Picker Placeholder
        </div>
        <button class="w-full bg-black text-white py-4 font-medium hover:bg-gray-800 transition uppercase tracking-widest">
          ADD TO CART
        </button>
      </div>
      <div class="mt-4 border-t border-gray-200 pt-4 text-sm leading-relaxed text-gray-600">
        {{ product.description }}
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    const init = () => {
      console.log('ğŸ’ ä¿®æ­£ç‰ˆãƒ¡ãƒ‡ã‚£ã‚¢å¯¾å¿œJS: èµ·å‹•ï¼');
      const container = document.getElementById('MainMediaContainer');
      const thumbList = document.getElementById('ThumbList');
      const thumbs = document.querySelectorAll('.js-thumb');
      const btnPrev = document.getElementById('GoPrev');
      const btnNext = document.getElementById('GoNext');

      thumbs.forEach((thumb) => {
        thumb.onclick = function () {
          const type = this.getAttribute('data-media-type');
          console.log('é¸æŠã•ã‚ŒãŸãƒ¡ãƒ‡ã‚£ã‚¢ã‚¿ã‚¤ãƒ—:', type);

          if (type === 'image') {
            const src = this.getAttribute('data-src');
            container.innerHTML = `<img src="${src}" class="w-full h-full object-cover">`;
          } else {
            // ã‚¨ã‚¹ã‚±ãƒ¼ãƒ—ã•ã‚ŒãŸHTMLã‚’ç¢ºå®Ÿã«HTMLã¨ã—ã¦æµã—è¾¼ã‚€
            const videoHtmlEscaped = this.getAttribute('data-video-html');
            const txt = document.createElement('textarea');
            txt.innerHTML = videoHtmlEscaped;
            container.innerHTML = txt.value; // ã“ã“ã§ãƒ‡ã‚³ãƒ¼ãƒ‰ã•ã‚ŒãŸHTMLãŒå…¥ã‚‹

            // å‹•ç”»ã‚’ç¢ºå®Ÿã«å†ç”Ÿã•ã›ã‚‹
            const video = container.querySelector('video');
            if (video) video.play();
          }

          thumbs.forEach((t) => t.classList.remove('is-active'));
          this.classList.add('is-active');
        };
      });

      if (btnNext && thumbList) {
        btnNext.onclick = (e) => {
          e.preventDefault();
          thumbList.scrollLeft += 180;
        };
      }
      if (btnPrev && thumbList) {
        btnPrev.onclick = (e) => {
          e.preventDefault();
          thumbList.scrollLeft -= 180;
        };
      }
    };
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

