<script>
  (function () {
    const init = () => {
      const container = document.getElementById('MainMediaContainer');
      const thumbList = document.getElementById('ThumbList');
      const thumbs = document.querySelectorAll('.js-thumb');
      const mainPrev = document.getElementById('MainPrev');
      const mainNext = document.getElementById('MainNext');
      const thumbPrev = document.getElementById('ThumbPrev');
      const thumbNext = document.getElementById('ThumbNext');
      let currentIndex = 0;

      if (!thumbList) return;

      const updateMedia = (index) => {
        const target = thumbs[index];
        if (!target) return;
        const type = target.getAttribute('data-media-type');
        if (type === 'image') {
          container.innerHTML = `<img src="${target.getAttribute('data-src')}" class="w-full h-full object-cover">`;
        } else {
          const txt = document.createElement('textarea');
          txt.innerHTML = target.getAttribute('data-video-html');
          container.innerHTML = txt.value;
          const v = container.querySelector('video');
          if (v) v.play();
        }

        document.querySelectorAll('.js-thumb-border').forEach((borderBox) => {
          borderBox.classList.remove('border-black');
          borderBox.classList.add('border-transparent');
        });
        const activeBorder = target.querySelector('.js-thumb-border');
        if (activeBorder) {
          activeBorder.classList.remove('border-transparent');
          activeBorder.classList.add('border-black');
        }

        thumbs.forEach((t) => t.classList.remove('is-active'));
        target.classList.add('is-active');
        currentIndex = index;
        target.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      };

      thumbs.forEach((thumb, index) => {
        thumb.addEventListener('click', () => updateMedia(index));
      });
      if (mainPrev)
        mainPrev.addEventListener('click', () => updateMedia((currentIndex - 1 + thumbs.length) % thumbs.length));
      if (mainNext) mainNext.addEventListener('click', () => updateMedia((currentIndex + 1) % thumbs.length));
      if (thumbPrev) thumbPrev.addEventListener('click', () => thumbList.scrollBy({ left: -200, behavior: 'smooth' }));
      if (thumbNext) thumbNext.addEventListener('click', () => thumbList.scrollBy({ left: 200, behavior: 'smooth' }));
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

<script>
  (function () {
    // 最近見た商品の管理（1時間でリセット）
    const initRecentlyViewed = () => {
      const EXPIRY_TIME = 60 * 60 * 1000; // 1時間（ミリ秒）
      const productHandle = '{{ product.handle }}';
      const productData = {
        handle: productHandle,
        title: {{ product.title | json }},
        url: '{{ product.url }}',
        price: '{{ product.price | money }}',
        image: '{{ product.featured_media | image_url: width: 300 }}'
      };

      // localStorageから既存のデータを取得
      const stored = localStorage.getItem('recentlyViewed');
      let recentlyViewedData = null;
      let products = [];

      if (stored) {
        try {
          const parsed = JSON.parse(stored);
          
          // 新形式かチェック（timestampがあるか）
          if (parsed.timestamp && parsed.products) {
            // 新形式
            const now = Date.now();
            const elapsed = now - parsed.timestamp;
            
            if (elapsed > EXPIRY_TIME) {
              // 1時間経過していたらリセット
              localStorage.removeItem('recentlyViewed');
            } else {
              // まだ有効
              products = parsed.products;
            }
          } else if (Array.isArray(parsed)) {
            // 旧形式（配列のみ） → 新形式に移行するためクリア
            localStorage.removeItem('recentlyViewed');
          }
        } catch (e) {
          // パースエラー時はクリア
          localStorage.removeItem('recentlyViewed');
        }
      }

      // 現在の商品を除外（重複防止）
      products = products.filter(item => item.handle !== productHandle);

      // 現在の商品を先頭に追加
      products.unshift(productData);

      // 最大5件まで保存
      products = products.slice(0, 7);

      // タイムスタンプ付きでlocalStorageに保存
      const now = Date.now();
      const dataToSave = {
        timestamp: now,
        products: products
      };
      localStorage.setItem('recentlyViewed', JSON.stringify(dataToSave));

      // 最近見た商品を表示
      displayRecentlyViewed(products);
    };

    const displayRecentlyViewed = (products) => {
      const container = document.getElementById('recently-viewed-products');
      if (!container) return;

      // 現在の商品を除外（表示しない）
      const currentHandle = '{{ product.handle }}';
      const filteredProducts = products.filter(item => item.handle !== currentHandle);

      if (filteredProducts.length === 0) {
        container.style.display = 'none';
        return;
      }

      container.style.display = 'block';

      const productList = container.querySelector('.recently-viewed-list');
      productList.innerHTML = '';

      filteredProducts.forEach(product => {
        const productCard = `
          <a href="${product.url}" class="block group">
            <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden mb-2">
              <img 
                src="${product.image}" 
                alt="${product.title}"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              >
            </div>
            <h4 class="text-xs font-semibold text-gray-900 leading-tight mb-1 line-clamp-2">${product.title}</h4>
            <p class="text-xs text-gray-600 font-bold">${product.price}</p>
          </a>
        `;
        const div = document.createElement('div');
        div.innerHTML = productCard;
        productList.appendChild(div.firstElementChild);
      });
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initRecentlyViewed);
    } else {
      initRecentlyViewed();
    }
  })();
</script>

