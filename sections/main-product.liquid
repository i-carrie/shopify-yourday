<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  /* 1. アクティブなサムネイルの枠線（!importantなし） */
  .js-thumb.is-active {
    border-color: #000;
    opacity: 1;
  }
  .js-thumb {
    opacity: 0.6;
    transition: all 0.2s ease;
  }
  .js-thumb:hover {
    opacity: 1;
  }

  /* 2. 動画サムネイル用のプレイアイコン */
  .thumb-video-badge {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    padding: 4px;
    pointer-events: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* 3. メイン画像上の矢印ボタン（ショップチャンネル風） */
  .main-nav-btn {
    background-color: rgba(255, 255, 255, 0.7);
    transition: background-color 0.2s, transform 0.2s;
  }
  .main-nav-btn:hover {
    background-color: rgba(255, 255, 255, 1);
    transform: translateY(-50%) scale(1.1);
  }
</style>

<section class="max-w-screen-xl mx-auto px-4 py-8 md:px-8 lg:py-12">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
    <div class="flex flex-col gap-4">
      <div id="MainVisualArea" class="relative aspect-[4/5] w-full bg-gray-50 overflow-hidden">
        <div id="MainMediaContainer" class="w-full h-full">
          {% assign featured_media = product.selected_or_first_available_variant.featured_media
            | default: product.featured_media
          %}
          {% if featured_media %}
            {% if featured_media.media_type == 'image' %}
              <img src="{{ featured_media | image_url: width: 1200 }}" class="w-full h-full object-cover">
            {% else %}
              {{
                featured_media
                | video_tag:
                  controls: true,
                  autoplay: true,
                  muted: true,
                  loop: true,
                  class: 'w-full h-full object-cover'
              }}
            {% endif %}
          {% else %}
            <div class="w-full h-full flex items-center justify-center text-gray-400">No Image</div>
          {% endif %}
        </div>

        <button
          id="MainPrev"
          type="button"
          class="main-nav-btn absolute left-2 top-1/2 -translate-y-1/2 z-10 w-10 h-10 flex items-center justify-center rounded-full shadow-sm text-gray-800"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-6"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
          </svg>
        </button>
        <button
          id="MainNext"
          type="button"
          class="main-nav-btn absolute right-2 top-1/2 -translate-y-1/2 z-10 w-10 h-10 flex items-center justify-center rounded-full shadow-sm text-gray-800"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-6"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </button>
      </div>

      {% if product.media.size > 1 %}
        <div id="ThumbList" class="flex gap-2 overflow-x-auto pb-2 scrollbar-hide">
          {% for media in product.media %}
            <div
              class="js-thumb w-20 h-20 flex-shrink-0 border-2 {% if media == featured_media %}is-active{% else %}border-transparent{% endif %} transition-all cursor-pointer"
              data-media-index="{{ forloop.index0 }}"
              data-media-type="{{ media.media_type }}"
              {% if media.media_type == 'image' %}
                data-src="{{ media | image_url: width: 1200 }}"
              {% else %}
                data-video-html="{{ media | video_tag: controls: true, autoplay: true, muted: true, loop: true, class: "w-full h-full object-cover" | escape }}"
              {% endif %}
            >
              <img
                src="{{ media | image_url: width: 240 }}"
                class="w-full h-full object-cover aspect-square pointer-events-none"
              >
              {% if media.media_type contains 'video' %}
                <div class="thumb-video-badge">
                  <svg class="w-4 h-4 text-black" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.333-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"></path>
                  </svg>
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="lg:sticky lg:top-8 flex flex-col gap-6 py-4">
      <div class="space-y-4">
        <p class="text-sm uppercase tracking-widest text-gray-500">
          Your day / {{ product.collections.first.title | default: 'Collection' }}
        </p>
        <h1 class="text-3xl md:text-4xl font-serif text-gray-900">{{ product.title }}</h1>
        <p class="text-xl text-gray-700">{{ product.price | money }}</p>
      </div>
      <div class="h-px bg-gray-200 w-full"></div>
      <div class="space-y-4">
        <div class="w-full h-12 bg-gray-50 border border-gray-200 flex items-center px-4 text-sm text-gray-500">
          Variant Picker Placeholder
        </div>
        <button class="w-full bg-black text-white py-4 font-medium hover:bg-gray-800 transition uppercase tracking-widest">
          ADD TO CART
        </button>
      </div>
      <div class="mt-4 border-t border-gray-200 pt-4 text-sm leading-relaxed text-gray-600">
        {{ product.description }}
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    const init = () => {
      const container = document.getElementById('MainMediaContainer');
      const thumbs = document.querySelectorAll('.js-thumb');
      const btnPrev = document.getElementById('MainPrev');
      const btnNext = document.getElementById('MainNext');
      let currentIndex = 0;

      const updateMedia = (index) => {
        const target = thumbs[index];
        if (!target) return;

        const type = target.getAttribute('data-media-type');
        if (type === 'image') {
          const src = target.getAttribute('data-src');
          container.innerHTML = `<img src="${src}" class="w-full h-full object-cover">`;
        } else {
          const videoHtmlEscaped = target.getAttribute('data-video-html');
          const txt = document.createElement('textarea');
          txt.innerHTML = videoHtmlEscaped;
          container.innerHTML = txt.value;
          const video = container.querySelector('video');
          if (video) video.play();
        }

        thumbs.forEach((t) => t.classList.remove('is-active'));
        target.classList.add('is-active');
        currentIndex = index;

        // サムネイルをスクロール追従させる
        target.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      };

      thumbs.forEach((thumb, index) => {
        thumb.onclick = () => updateMedia(index);
      });

      if (btnPrev) {
        btnPrev.onclick = () => {
          const newIndex = (currentIndex - 1 + thumbs.length) % thumbs.length;
          updateMedia(newIndex);
        };
      }

      if (btnNext) {
        btnNext.onclick = () => {
          const newIndex = (currentIndex + 1) % thumbs.length;
          updateMedia(newIndex);
        };
      }
    };
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

