<script>
  (function () {
    const init = () => {
      const container = document.getElementById('MainMediaContainer');
      const thumbList = document.getElementById('ThumbList');
      const thumbs = document.querySelectorAll('.js-thumb');
      const mainPrev = document.getElementById('MainPrev');
      const mainNext = document.getElementById('MainNext');
      const thumbPrev = document.getElementById('ThumbPrev');
      const thumbNext = document.getElementById('ThumbNext');
      let currentIndex = 0;

      if (!thumbList) return;

      const updateMedia = (index) => {
        const target = thumbs[index];
        if (!target) return;
        const type = target.getAttribute('data-media-type');
        if (type === 'image') {
          container.innerHTML = `<img src="${target.getAttribute('data-src')}" class="w-full h-full object-cover">`;
        } else {
          const txt = document.createElement('textarea');
          txt.innerHTML = target.getAttribute('data-video-html');
          container.innerHTML = txt.value;
          const v = container.querySelector('video');
          if (v) v.play();
        }

        document.querySelectorAll('.js-thumb-border').forEach((borderBox) => {
          borderBox.classList.remove('border-black');
          borderBox.classList.add('border-transparent');
        });
        const activeBorder = target.querySelector('.js-thumb-border');
        if (activeBorder) {
          activeBorder.classList.remove('border-transparent');
          activeBorder.classList.add('border-black');
        }

        thumbs.forEach((t) => t.classList.remove('is-active'));
        target.classList.add('is-active');
        currentIndex = index;
        target.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      };

      thumbs.forEach((thumb, index) => {
        thumb.addEventListener('click', () => updateMedia(index));
      });
      if (mainPrev)
        mainPrev.addEventListener('click', () => updateMedia((currentIndex - 1 + thumbs.length) % thumbs.length));
      if (mainNext) mainNext.addEventListener('click', () => updateMedia((currentIndex + 1) % thumbs.length));
      if (thumbPrev) thumbPrev.addEventListener('click', () => thumbList.scrollBy({ left: -200, behavior: 'smooth' }));
      if (thumbNext) thumbNext.addEventListener('click', () => thumbList.scrollBy({ left: 200, behavior: 'smooth' }));
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

