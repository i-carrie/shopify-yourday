  } /* size-6„Åß„ÅØ„Å™„ÅèÁ¢∫ÂÆü„Å´Êï∞ÂÄ§ÊåáÂÆö */
</style>

<section class="max-w-screen-xl mx-auto px-4 py-8 md:px-8 lg:py-12">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
    <div class="flex flex-col gap-4">
      <div id="MainVisualArea" class="relative aspect-[4/5] w-full bg-gray-50 overflow-hidden">
        {%- assign featured_media = product.selected_or_first_available_variant.featured_media
          | default: product.featured_media
        -%}
        <div id="MainMediaContainer" class="w-full h-full">
          {%- if featured_media -%}
            <img
              id="TargetMainImage"
              src="{{ featured_media | image_url: width: 1200 }}"
              class="w-full h-full object-cover"
            >
          {%- else -%}
            <div class="w-full h-full flex items-center justify-center text-gray-400">No Image</div>
          {%- endif -%}
        </div>
      </div>

      {% if product.media.size > 1 %}
        <div class="relative group w-full px-1">
          <button
            id="GoPrev"
            type="button"
            class="thumb-arrow absolute left-0 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
            </svg>
          </button>

          <div id="ThumbList" class="flex gap-2 overflow-x-auto pb-2 scrollbar-hide" style="scroll-behavior: smooth;">
            {% for media in product.media %}
              <div
                class="js-thumb w-20 h-20 flex-shrink-0 bg-gray-50 border-2 {% if media == featured_media %}is-active{% else %}border-transparent{% endif %} opacity-60 hover:opacity-100 transition-all cursor-pointer"
                data-src="{{ media | image_url: width: 1200 }}"
              >
                <img
                  src="{{ media | image_url: width: 240 }}"
                  class="w-full h-full object-cover aspect-square pointer-events-none"
                >
              </div>
            {% endfor %}
          </div>

          <button
            id="GoNext"
            type="button"
            class="thumb-arrow absolute right-0 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </button>
        </div>
      {% endif %}
    </div>

    <div class="lg:sticky lg:top-8 flex flex-col gap-6 py-4">
      <div class="space-y-4">
        <p class="text-sm uppercase tracking-widest text-gray-500">
          Your day / {{ product.collections.first.title | default: 'Collection' }}
        </p>
        <h1 class="text-3xl md:text-4xl font-serif text-gray-900">{{ product.title }}</h1>
        <p class="text-xl text-gray-700">{{ product.price | money }}</p>
      </div>
      <div class="h-px bg-gray-200 w-full"></div>
      <div class="space-y-4">
        <div class="w-full h-12 bg-gray-50 border border-gray-200 flex items-center px-4 text-sm text-gray-500">
          Variant Picker Placeholder
        </div>
        <button class="w-full bg-black text-white py-4 font-medium hover:bg-gray-800 transition uppercase tracking-widest">
          ADD TO CART
        </button>
      </div>
      <div class="mt-4 border-t border-gray-200 pt-4">
        <details class="group cursor-pointer" open>
          <summary class="flex justify-between items-center font-medium list-none">
            <span>Product Description</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5 transition group-open:rotate-180"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
            </svg>
          </summary>
          <div class="mt-4 text-gray-600 leading-relaxed text-sm prose prose-sm">{{ product.description }}</div>
        </details>
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    const init = () => {
      console.log('üíé „ÇÜ„ÇÅ„Åã„Å°„ÇÉ„ÇìÊúÄÊñ∞JS: Ëµ∑ÂãïÔºÅ');
      const mainImg = document.getElementById('TargetMainImage');
      const thumbList = document.getElementById('ThumbList');
      const thumbs = document.querySelectorAll('.js-thumb');
      const btnPrev = document.getElementById('GoPrev');
      const btnNext = document.getElementById('GoNext');

      thumbs.forEach((thumb) => {
        thumb.onclick = function () {
          const newSrc = this.getAttribute('data-src');
          if (mainImg && newSrc) {
            mainImg.src = newSrc;
            thumbs.forEach((t) => t.classList.remove('is-active'));
            this.classList.add('is-active');
          }
        };
      });

      if (btnNext && thumbList) {
        btnNext.onclick = (e) => {
          e.preventDefault();
          thumbList.scrollLeft += 180;
        };
      }
      if (btnPrev && thumbList) {
        btnPrev.onclick = (e) => {
          e.preventDefault();
          thumbList.scrollLeft -= 180;
        };
      }
    };
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

