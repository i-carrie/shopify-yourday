<script>
  document.addEventListener('DOMContentLoaded', function () {
    const productForm = document.getElementById('product-form-{{ section.id }}');
    const addToCartButton = document.getElementById('add-to-cart-button');

    if (productForm && addToCartButton) {
      const originalText = addToCartButton.textContent;

      productForm.addEventListener('submit', async function (e) {
        e.preventDefault();

        // すべてのバリアント数量を取得
        const formData = new FormData(productForm);
        const quantities = formData.getAll('quantity');
        const variantIds = formData.getAll('id');

        // 数量が1以上のバリアントを抽出
        const itemsToAdd = [];
        quantities.forEach((qty, index) => {
          const quantity = parseInt(qty);
          if (quantity > 0) {
            itemsToAdd.push({
              id: variantIds[index],
              quantity: quantity,
            });
          }
        });

        // 何も選択されていない場合
        if (itemsToAdd.length === 0) {
          window.cartAPI.showToast('数量を選択してください', 'error');
          return;
        }

        // ボタンを無効化
        addToCartButton.disabled = true;
        addToCartButton.textContent = '追加中...';

        try {
          // ギフトオプションを取得
          const giftWrapping = formData.get('properties[ギフトラッピング]');
          const giftMessage = formData.get('properties[ギフトメッセージ]');

          // 各アイテムをカートに追加
          for (const item of itemsToAdd) {
            const cartData = {
              id: item.id,
              quantity: item.quantity,
              properties: {},
            };

            // ギフトオプションを追加
            if (giftWrapping) {
              cartData.properties['ギフトラッピング'] = giftWrapping;
            }

            if (giftMessage && giftMessage.trim()) {
              cartData.properties['ギフトメッセージ'] = giftMessage.trim();
            }

            await window.cartAPI.addToCart(cartData);
          }

          // 成功メッセージ
          window.cartAPI.showToast('カートに追加しました', 'success');
        } catch (error) {
          console.error('Error:', error);
          window.cartAPI.showToast(error.message || 'カートへの追加に失敗しました', 'error');
        } finally {
          addToCartButton.disabled = false;
          addToCartButton.textContent = originalText;
        }
      });
    }
  });
</script>

