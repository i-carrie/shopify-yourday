[
  {
    "name": "theme_info",
    "theme_name": "Your Day",
    "theme_author": "Local Development",
    "theme_version": "0.1.0",
    "theme_documentation_url": "https://github.com/yourname/yourday",
    "theme_support_url": "https://github.com/yourname/yourday/issues"
  },
  {
    "name": "商品バッジ",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_sale_badge",
        "label": "Saleバッジを表示",
        "default": true
      },
      {
        "type": "color",
        "id": "color_sale_badge",
        "label": "Saleバッジの色",
        "default": "#dc2626"
      },
      {
        "type": "checkbox",
        "id": "show_new_badge",
        "label": "新着バッジを表示",
        "default": true
      },
      {
        "type": "color",
        "id": "color_new_badge",
        "label": "新着バッジの色",
        "default": "#ec4899"
      }
    ]
  },
  {
    "name": "SNSシェア設定",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_share_facebook",
        "label": "Facebookを表示",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_share_x",
        "label": "X (Twitter)を表示",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_share_line",
        "label": "LINEを表示",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_share_pinterest",
        "label": "Pinterestを表示",
        "default": true
      }
    ]
  },
  {
    "name": "商品ポリシー設定",
    "settings": [
      {
        "type": "text",
        "id": "shipping_policy_text",
        "label": "配送ポリシーの文言",
        "default": "全品送料無料。注文確定から2〜3営業日以内に発送いたします。"
      },
      {
        "type": "text",
        "id": "return_policy_text",
        "label": "返品ポリシーの文言",
        "default": "商品到着後7日以内であれば返品・交換が可能です。"
      }
    ]
  },
    {
    "name": "配送設定",
    "settings": [
      { "id": "ship_label", 
      "type": "text", 
      "label": "見出し", 
      "default": "配送について" },
      { "id": "ship_body", 
      "type": "richtext", 
      "label": "本文", "default": "<p><strong>配送料：</strong>全国一律500円</p>" 
    },
      { "id": "ship_color", 
      "type": "color", 
      "label": "文字色", 
      "default": "#4b5563" },
      { "id": "ship_size", 
      "type": "range", 
      "label": "文字サイズ", 
      "min": 10, 
      "max": 18, 
      "step": 1, 
      "unit": "px", 
      "default": 14 }
    ]
  }
]
